{
  "extends": "./tsconfig.json",
  "include": [
    "server.js",
    "vite.config.ts",
    "app/lib/logger.ts",
    "app/lib/errorHandler.ts",
    "app/lib/security.ts",
    "app/lib/envValidation.ts",
